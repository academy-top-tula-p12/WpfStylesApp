        <Style x:Key="BtnEnabled">
            <Style.Setters>
                <Setter Property="Control.IsEnabled" Value="False"/>
            </Style.Setters>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=check, Path=IsChecked}"
                             Value="True">
                    <Setter Property="Control.IsEnabled" Value="True"/>
                </DataTrigger>
            </Style.Triggers>    
        </Style>
    </Window.Resources>
